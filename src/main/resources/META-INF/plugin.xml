<idea-plugin>
    <id>net.ace.grmw</id>
    <name>Gradle Wrapper Mirror</name>
    <vendor email="BiliBiliACEGE-Github@outlook.com" url="https://github.com/BiliBiliACEGE">Ace哥</vendor>
    <description>Gradle Wrapper Mirror 一键把官方下载地址切换成国内镜像（阿里云、腾讯、清华），自动或快捷键触发，完全兼容 Configuration Cache，支持自定义镜像。</description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <notificationGroup id="Gradle Wrapper Mirror"
                           displayType="BALLOON"/>
    </extensions>
    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="net.ace.grmw.GrmwConfig"/>
        <applicationConfigurable parentId="tools"
                                 instance="net.ace.grmw.GrmwSettings"
                                 displayName="Gradle Wrapper Mirror"/>
        <postStartupActivity implementation="net.ace.grmw.GrmwPostActivity"/>
    </extensions>
    <resource-bundle>messages.GrmwBundle</resource-bundle>
</idea-plugin>